<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxim.lab6_calculator.MainActivity"
    android:label="@string/app_name">

    <Button
        android:text="X-Y"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/b2"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:onClick="ClickButton"/>

    <Button
        android:text="X+Y"
        android:layout_height="150dp"
        android:id="@+id/b1"
        android:layout_width="280dp"
        android:layout_above="@+id/b2"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30sp"
        android:onClick="ClickButton"/>

    <TextView
        android:text="Results"
        android:id="@+id/textView"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="51dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X*Y"
        android:layout_height="150dp"
        android:id="@+id/b3"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/b1"
        android:layout_toEndOf="@+id/b2"
        android:layout_alignTop="@+id/b1" />

    <Button
        android:text="X/Y"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_below="@+id/b3"
        android:layout_toEndOf="@+id/b2"
        android:id="@+id/b4"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="ClickButton"/>

    <Button
        android:text="Result ->X"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/b8"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/b3"
        android:textAlignment="center"
        android:onClick="ClickButton"/>

    <Button
        android:text="X xor Y"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/b8"
        android:id="@+id/b6"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="ClickButton"/>

    <Button
        android:text="X mod Y"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_above="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:id="@+id/b5"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="ClickButton"/>

    <Button
        android:text="X to bin"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_above="@+id/b8"
        android:layout_toEndOf="@+id/b5"
        android:id="@+id/b7"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="ClickButton"/>

    <TextView
        android:text="Y"
        android:id="@+id/textView4"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/b5"
        android:onClick="ClickButton"/>

    <TextView
        android:text="X"
        android:layout_marginTop="37dp"
        android:id="@+id/textView3"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/b3"
        android:onClick="ClickButton"/>

    <TextView
        android:text="TextView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/Resultate"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="36sp" />

    <Button
        android:text="Results?"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/b9"
        android:layout_width="150dp" />

</RelativeLayout>
